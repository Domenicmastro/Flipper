{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": false,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["mocha", "node"],
		"outDir": "./dist",
		"rootDir": "./src",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src", "src/types"],
	"ts-node": {
		"esm": true
	}
}
